DAY 14 - FOREIGN KEY - ONE TO MANY

create database my_company;

use my_company;

create table departments(
	department_id int auto_increment,
    name varchar(30) not null,
    primary key(department_id)
)auto_increment = 101;

create table employees(
	employee_id int auto_increment,
    name varchar(30) not null,
    salary float not null,
    department_id int not null,
    primary key(employee_id),
    foreign key(department_id) references departments(department_id)
)auto_increment = 1001;

insert into departments(name) values ('IT'), ('Management');

insert into
employees(name, salary, department_id)
values
('Vijay Verma', 51500, 101),
('Pankaj Mishra', 52600, 101),
('Mahima Gupta', 48750, 102),
('Rajeev Mehra', 54250, 101),
('Roshini Mishra', 45600, 102);

select * from departments;

select * from employees;

-- One to Many 
SELECT 
    *
FROM
    departments
        JOIN
    employees ON departments.department_id = employees.department_id;
    
-- Many to One
SELECT 
    *
FROM
    employees
        JOIN
    departments ON employees.department_id = departments.department_id;
    
SELECT 
	departments.name AS 'Department Name',
    employees.name AS 'Employee Name',
    employees.salary AS 'Employee Salary'
FROM
    departments
        JOIN
    employees ON employees.department_id = departments.department_id;
